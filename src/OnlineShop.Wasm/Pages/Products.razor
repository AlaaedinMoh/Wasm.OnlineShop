@page "/"

@if (products is null)
{
    <h3>Loading...</h3>
}
else
{
    <h3 class="mb-5">Products</h3>
    var productCount = products.Count();
    @if (productCount > 0)
    {
        @foreach (var prodGroup in GetGroupdedProductsByCategory()){
            <h4>@GetCategoryName(prodGroup)</h4>
            <div class=" row mt-3">
                <DisplayProducts Products="@prodGroup"></DisplayProducts>
            </div>
            <hr class="mb-3" />
        }
    }
}
